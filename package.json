{
  "name": "conway",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:notyourbear/conway.git",
  "author": "notyourbear <pracenberg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn dev:start",
    "dev:start": "nodemon --ignore lib --exec babel-node src/server",
    "test": "eslint src && eslint tests && jest --coverage",
    "precommit": "yarn test",
    "prepush": "yarn test && yarn prod:build",
    "prod:build": "rimraf lib && babel src -d lib",
    "prod:start": "NODE_ENV=production pm2 start lib/server && pm2 logs",
    "prod:stop": "pm2 delete all"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-jest": "^19.0.0",
    "babel-preset-env": "^1.2.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "pm2": "^2.4.2",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "common-tags": "^1.4.0",
    "compression": "^1.6.2",
    "express": "^4.15.2"
  }
}
